<Window x:Class="Hackaton.Secret"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Secret" Height="450" Width="800">
    <Grid Background="#1E2A3A">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#2A3849" Padding="15" Margin="0,0,0,20">
            <TextBlock Text="Управление секретом" 
                      FontSize="24" 
                      FontWeight="Bold" 
                      Foreground="White" 
                      HorizontalAlignment="Center"/>
        </Border>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="15,10,15,20">
            <TextBox x:Name="SearchTextBox" 
                    Text="Поиск секретов..." 
                    Width="250" 
                    Height="35"
                    FontSize="14"
                    Padding="10,5"
                    Background="#2A3849"
                    Foreground="White"
                    BorderBrush="#1ABC9C"/>
            <Button x:Name="RefreshBtn" 
                   Content="Поиск" 
                   Margin="15,0,0,0" 
                   Height="35"
                   Padding="15,5"
                   Background="#1ABC9C"
                   Foreground="White"
                   FontWeight="SemiBold"/>
            <Button x:Name="AddSecretBtn" 
                   Content="Добавить секрет" 
                   Margin="15,0,0,0" 
                   Height="35"
                   Padding="15,5"
                   Background="#1ABC9C"
                   Foreground="White"
                   FontWeight="SemiBold"
                   Click="AddSecretBtn_Click"/>
            <Button x:Name="RequestAccessBtn" 
                   Content="Подать заявку" 
                   Margin="15,0,0,0" 
                   Height="35"
                   Padding="15,5"
                   Background="#1ABC9C"
                   Foreground="White"
                   FontWeight="SemiBold"
                   Click="RequestAccessBtn_Click"/>
            <Button x:Name="RequestStatus" 
                   Content="Статус" 
                   Margin="15,0,0,0" 
                   Height="35"
                   Padding="15,5"
                   Background="#1ABC9C"
                   Foreground="White"
                   FontWeight="SemiBold"
                   Click="RequestStatus_Click"/>
        </StackPanel>

        <DataGrid x:Name="SecretsGrid" Grid.Row="2" Margin="15"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  Background="White"
                  BorderBrush="#1ABC9C">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <StatusBar Grid.Row="3" Background="#2A3849">
            <TextBlock x:Name="StatusText" Text="Готов" Foreground="White"/>
        </StatusBar>
    </Grid>
</Window>