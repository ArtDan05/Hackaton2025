<Window x:Class="Hackaton.SecretSeeker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hackaton"
        mc:Ignorable="d"
        Title="Просмотр секрета" Height="500" Width="900" Background="#1E2A3A">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#2A3849" Padding="15" Margin="0,0,0,20">
            <TextBlock Text="Просмотр секрета" 
                      FontSize="24" 
                      FontWeight="Bold" 
                      Foreground="White" 
                      HorizontalAlignment="Center"/>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Готово" 
                    Background="#1ABC9C" 
                    Foreground="White" 
                    FontWeight="Bold"
                    Height="35"
                    Width="120"
                    Click="Button_Click"/>
        </StackPanel>
        <TextBox HorizontalAlignment="Center" Grid.Row="1" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" 
                 Width="840" Height="287" Background="#2A3849" Foreground="White" Name="DescriptionText"/>
    </Grid>
</Window>