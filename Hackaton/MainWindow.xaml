<Window x:Class="Hackaton.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hackaton"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#1E2A3A">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Авторизация" FontSize="24" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,30"
                       Foreground="White"/>

            <Label Content="Логин:" FontWeight="Bold" Foreground="White"/>
            <TextBox Name="LoginBox" Height="35" Margin="0,0,0,15" 
                     Padding="5" Background="#2A3849" Foreground="White" 
                     BorderBrush="#1ABC9C" BorderThickness="1"/>

            <Label Content="Пароль:" FontWeight="Bold" Foreground="White"/>
            <PasswordBox Name="PasswordBox" Height="35" Margin="0,0,0,25"
                         Padding="5" Background="#2A3849" Foreground="White" 
                         BorderBrush="#1ABC9C" BorderThickness="1"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Вход" Width="100" Height="35" Margin="0,0,15,0" 
                        Background="#1ABC9C" Foreground="White" 
                        FontWeight="Bold" Click="Login_Click"/>
                <Button Content="Регистрация" Width="100" Height="35"
                        Background="#1ABC9C" Foreground="White" 
                        FontWeight="Bold" Click="Register_Click"/>
            </StackPanel>

            <TextBlock Name="StatusText" Margin="0,20,0,0" TextWrapping="Wrap"
                       Foreground="#E74C3C" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>